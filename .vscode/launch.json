{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "@fs${workspaceFolder}/packages/ui/src/*": "${workspaceFolder}/packages/ui/src/*",
        "@fs${workspaceFolder}/*": "${workspaceFolder}/*",
        "/@fs${workspaceFolder}/packages/ui/src/*": "${workspaceFolder}/packages/ui/src/*",
        "/@fs${workspaceFolder}/*": "${workspaceFolder}/*",
        "./packages/ui/src/*": "${workspaceFolder}/packages/ui/src/*",
        "./src/*": "${workspaceFolder}/apps/test-ui/src/*"
      }
    },
    {
      "name": "Vite Dev Server (Test UI)",
      "request": "launch",
      "type": "node",
      "cwd": "${workspaceFolder}/apps/test-ui",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Vite Dev Server (Docs Site)",
      "request": "launch",
      "type": "node",
      "cwd": "${workspaceFolder}/apps/docs-site",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Launch Chrome (Docs Site)",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "@fs${workspaceFolder}/packages/ui/src/*": "${workspaceFolder}/packages/ui/src/*",
        "@fs${workspaceFolder}/*": "${workspaceFolder}/*",
        "/@fs${workspaceFolder}/packages/ui/src/*": "${workspaceFolder}/packages/ui/src/*",
        "/@fs${workspaceFolder}/*": "${workspaceFolder}/*",
        "./packages/ui/src/*": "${workspaceFolder}/packages/ui/src/*",
        "./src/*": "${workspaceFolder}/apps/docs-site/src/*"
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug Test UI",
      "configurations": ["Vite Dev Server (Test UI)", "Launch Chrome"],
      "presentation": {
        "order": 1
      }
    },
    {
      "name": "Debug Docs Site",
      "configurations": ["Vite Dev Server (Docs Site)", "Launch Chrome (Docs Site)"],
      "presentation": {
        "order": 2
      }
    }
  ]
}
