{
  "name": "@phaserjsx/dev-playground",
  "version": "0.5.0",
  "private": true,
  "type": "module",
  "description": "Focused development playground for @number10/phaserjsx features",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "generate-icons": "tsx ../../packages/ui/src/scripts/generate-icons.ts --config ./icon-generator.config.ts"
  },
  "dependencies": {
    "@number10/phaserjsx": "workspace:*",
    "lucide-static": "^0.562.0",
    "phaser": "^3.90.0",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vite": "^7.2.2"
  }
}
