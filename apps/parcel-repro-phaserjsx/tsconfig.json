{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    "module": "ESNext",
    "moduleResolution": "bundler",

    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "jsx": "react",
    "jsxFactory": "createElement",
    "jsxFragmentFactory": "Fragment",

    "noEmit": true
  },
  "include": ["src"]
}
