{
  "name": "phaserjsx",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Declarative Phaser3 + rexUI framework with TypeScript",
  "packageManager": "pnpm@latest",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel --filter \"packages/*\" dev & pnpm --filter @phaserjsx/test-ui dev",
    "dev:app": "pnpm --filter @phaserjsx/test-ui dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r run lint",
    "format": "pnpm -r format",
    "typecheck": "pnpm -r typecheck",
    "changeset": "pnpm -w changeset",
    "release": "pnpm -w changeset version && pnpm -r install --no-frozen-lockfile && pnpm -r build && pnpm -w changeset publish",
    "prepare": "husky",
    "doctor": "node -v && pnpm -v && pnpm exec tsc -v",
    "generate-stats": "ts-node scripts/generate-stats.ts",
    "generate-icons": "tsx packages/ui/src/scripts/generate-icon-types.ts -p bootstrap-icons -o apps/test-ui/src/components/icon-types.generated.ts",
    "generate-icon-loaders": "tsx packages/ui/src/scripts/generate-icon-loaders.ts -s apps/test-ui/src -o apps/test-ui/src/components/icon-loaders.generated.ts -p bootstrap-icons"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "cspell": "^9.3.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
