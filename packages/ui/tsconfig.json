{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Enable project references for faster builds
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist",

    // Override noEmit for this package since we build it
    "noEmit": false,

    // Generate declaration files
    "declaration": true,
    "declarationMap": true,

    // JSX configuration
    "jsx": "react-jsx",
    "jsxImportSource": "."
  },
  "include": ["src/**/*"],
  "exclude": ["src/samples/**/*", "node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
